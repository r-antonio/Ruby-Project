<%= simple_form_for(@medium) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :imdb %>
    <%= f.input :title %>
    <%= f.input :synopsis %>
    <%= f.input :airing %>
    <%= f.input :airing_time %>
    <%= f.input :serie %>
    <%= f.input :runtime %>
    <%= f.input :released %>
    <%= f.input :rated %>
    <%= f.input :poster %>
    <%= f.input :episodes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.bio %></td>
        <td><%= link_to 'Show', person, class: 'btn btn-primary btn-xs' %></td>
        <% if can? :update, person %>
        <td><%= link_to 'Edit', edit_person_path(person), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @people %>
<br>

<% if can? :create, @people %>
<%= link_to 'New Person', new_person_path, class: 'btn btn-success' %>
<% end %>

<%= link_to 'Back', url_for(:back), class: 'btn btn-success' %>

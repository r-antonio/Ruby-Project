<div class="col s12">
    <div class="row">
        <div class="input-field col s3">
            <i class="material-icons prefix">search</i>
            <select id="q-category">
                <option value="0" selected>Media</option>
                <option value="1">Characters</option>
                <option value="2">People</option>
           </select>
        </div>
        <div class="input-field col s9">
            <input id="query" type="text" class="validate">
        </div>
    </div>
</div>
<script>
  $(document).ready(function() {
    $('select').material_select();
  });
  $('#query').keydown(function (e){
    if(e.keyCode == 13){
        var cat = $('#q-category').val();
        var q = $(this).val();
        var categories = ["media","characters","people"]
        if(cat < categories.length){
            var url = window.location.origin+"/"+categories[cat]+"/search/"+q;
            console.log("Category: "+cat);
            console.log(url);
            window.location.href = url;
        }
    }
  });
</script>

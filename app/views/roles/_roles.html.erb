<table class"striped">
  <thead>
    <tr>
      <th>Role</th>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% roles.each do |role| %>
      <tr>
        <td><%= role.role %></td>
        <td><%= link_to role.person.name, person_path(role.person) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

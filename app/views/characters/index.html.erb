<p id="notice"><%= notice %></p>

<h1>Characters</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= image_tag(character.image.image.url, :size => '60x80') %></td>
        <td><%= character.name %></td>
        <td><%= character.bio %></td>
        <td><%= link_to 'Show', character, class: 'btn btn-primary btn-xs' %></td>
        <% if can? :update, character %>
        <td><%= link_to 'Edit', edit_character_path(character), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @characters %>
<br>

<% if can? :create, @characters %>
<%= link_to 'New Character', new_character_path, class: 'btn btn-success' %>
<% end %>
<%= link_to 'Back', url_for(:back), class: 'btn btn-success' %>
